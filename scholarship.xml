		<transition id="id35">
			<source ref="id33"/>
			<target ref="id34"/>
			<label kind="synchronisation" x="42" y="144">request_transcript?</label>
			<nail x="-221" y="178"/>
			<nail x="459" y="170"/>
		</transition>
		<transition id="id36">
			<source ref="id34"/>
			<target ref="id33"/>
			<label kind="synchronisation" x="34" y="-42">receive_transcript!</label>
			<nail x="459" y="-68"/>
			<nail x="-221" y="-59"/>
		</transition>
	</template>
	<system>
// Process instantiations
student = Student();
committee = Committee();
server = Server();

// System composition
system student, committee, server;
    </system>
	<queries>
		<query>
			<formula>A[] not deadlock
A[] (Student.ScholarshipSelect imply authenticated)

Student.ViewTranscript --&gt; Student.HomePage</formula>
			<comment/>
		</query>
	</queries>
</nta>
