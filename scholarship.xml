			<target ref="id7"/>
			<label kind="guard" x="246" y="255">canApply</label>
		</transition>
		<transition id="id20">
			<source ref="id2"/>
			<target ref="id6"/>
			<label kind="synchronisation" x="510" y="93">logout!</label>
			<label kind="assignment" x="510" y="119">authenticated := false</label>
		</transition>
