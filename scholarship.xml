			<source ref="id3"/>
			<target ref="id2"/>
			<nail x="272" y="-93"/>
		</transition>
		<transition id="id13">
			<source ref="id10"/>
			<target ref="id2"/>
			<label kind="guard" x="-238" y="357">studentCGPA &lt; 7</label>
			<label kind="synchronisation" x="-238" y="382">reject!</label>
			<label kind="assignment" x="-238" y="408">canApply := false</label>
